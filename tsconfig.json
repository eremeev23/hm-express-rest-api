{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": "./src",
    "paths": {
      "@/middleware/*": ["middleware/*"],
      "@/resources/*": ["resources/*"],
      "@/config/*": ["config/*"],
      "@/routes/*": ["routes/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    },
    "sourceMap": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
